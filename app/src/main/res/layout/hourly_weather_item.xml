<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvHourlyWeather"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="10dp"
    card_view:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">
        <TextView
            android:id="@+id/timeHourlyWeather"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageHourlyWeather"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/imageHourlyWeather"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toEndOf="@+id/timeHourlyWeather"
            app:layout_constraintEnd_toStartOf="@+id/tempHourlyWeather"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/tempHourlyWeather"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/imageHourlyWeather"
            app:layout_constraintEnd_toStartOf="@+id/windHourlyWeather"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/windHourlyWeather"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/tempHourlyWeather"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>