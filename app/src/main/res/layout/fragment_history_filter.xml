<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_HistoryFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="@color/invisible_color"
        card_view:cardCornerRadius="10dp"
        card_view:cardUseCompatPadding="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Spinner
                android:id="@+id/spinnerCity_FragmentHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textSpinnerCity_FragmentHistory"
                android:text="@string/text_cities"
                android:textSize="10sp"
                android:gravity="center"
                android:paddingBottom="8dp"
                app:layout_constraintStart_toStartOf="@+id/spinnerCity_FragmentHistory"
                app:layout_constraintEnd_toEndOf="@+id/spinnerCity_FragmentHistory"
                app:layout_constraintTop_toBottomOf="@+id/spinnerCity_FragmentHistory"/>
            <TextView
                android:id="@+id/date_FragmentHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/date2_FragmentHistory"
                app:layout_constraintTop_toBottomOf="@+id/textSpinnerCity_FragmentHistory"/>
            <TextView
                android:id="@+id/dateText_FragmentHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="@string/begin_diapozon"
                android:layout_marginBottom="4dp"
                app:layout_constraintStart_toStartOf="@+id/date_FragmentHistory"
                app:layout_constraintEnd_toEndOf="@+id/date_FragmentHistory"
                app:layout_constraintTop_toBottomOf="@+id/date_FragmentHistory"/>
            <TextView
                android:id="@+id/date2_FragmentHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/date_FragmentHistory"
                app:layout_constraintTop_toBottomOf="@+id/textSpinnerCity_FragmentHistory"/>
            <TextView
                android:id="@+id/dateText2_FragmentHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="@string/end_diapozon"
                android:layout_marginBottom="4dp"
                app:layout_constraintStart_toStartOf="@+id/date2_FragmentHistory"
                app:layout_constraintEnd_toEndOf="@+id/date2_FragmentHistory"
                app:layout_constraintTop_toBottomOf="@+id/date_FragmentHistory"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputBeginTemp_FragmentHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/begin_temperature"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginStart="3dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textInputEndTemp_FragmentHistory"
                app:layout_constraintTop_toBottomOf="@+id/dateText2_FragmentHistory">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputEndTemp_FragmentHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/end_temperature"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_marginTop="5dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="3dp"
                app:layout_constraintStart_toEndOf="@+id/textInputBeginTemp_FragmentHistory"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dateText2_FragmentHistory">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/filterButton_FragmentHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputEndTemp_FragmentHistory"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_FragmentHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>